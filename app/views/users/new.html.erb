<div class="form-container">
  <h1>Sign up</h1>
  <%= form_for(@user, url: signup_path) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation, "Please retype your password" %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Create my FBA account"%>
  <% end %>
  <p> Already have an account? Please <%= link_to "sign in", login_path%><p>
</div>
