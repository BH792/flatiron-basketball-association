<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
    <%= form_for(@user, url: signup_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label :password_confirmation, "Please retype your pasword" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>

      <%= f.submit "Create my FBA account", class: "btn btn-primary" %>
    <% end %>
    <p> Already have an account? Please <%= link_to "sign in", login_path%><p>
  </div>
