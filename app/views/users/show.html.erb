<center><h2>Team <%= @user.teams.first.name%></h2></center>
<center><h2>Current Lineup: </h2></center>
  <div class="container">
    <% @user.players.each_with_index do |player, index| %>
      <div class="card-container">
        <input type="checkbox" class="hidden" id="<%= "player-#{index}" %>" name="team[player_ids][]" value="<%= player.id %>" checked>
        <div class="card">
          <div class="card-content">
            <div class="card-title-container">
              <div class="card-title"><%= player.name %></div>
            </div>
            <table class="card-table">
              <tr>
                <td>PPG</td>
                <td><%= player.ppg %></td>
              </tr>
              <tr>
                <td>APG</td>
                <td><%= player.apg %></td>
              </tr>
              <tr>
                <td>RPG</td>
                <td><%= player.rpg %></td>
              </tr>
              <tr>
                <td>SPG</td>
                <td><%= player.spg %></td>
              </tr>
              <tr>
                <td class="last">BPG</td>
                <td class="last"><%= player.bpg %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<center>
  <%= button_to "Edit Team", edit_team_path(@user.teams.first), method: :get %>
  <br>
  <br>
  <%= form_tag games_path do %>
    <%= hidden_field_tag "team[home_id]", @user.teams.first.id %>
    <%= collection_select "", "team[away_id]", @playable_teams, :id, :name  %>
    <%= submit_tag "Challenge" %>
  <% end %>
</center>
