<style media="screen">
  @keyframes spin {
  0% { transform: rotate(0deg);}
  100% { transform: rotate(360deg);}
  }

  #basketball {
    animation: spin 4s linear infinite;
  }

  .basketball-container {
    padding: 50px;
    width: 400px;
    margin: 0 auto;
  }
</style>

<div class="basketball-container">
  <%= image_tag "basketball", id: "basketball", size: "300" %>
</div>
