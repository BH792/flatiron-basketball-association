<style media="screen">
  .form-button {
    font-size: 14pt;
  }
</style>

<%= form_tag team_path(@team), :method => :put do %>
  <div class="container">
    <div class="team-form-container">
      <h1>Change up your team </h1>
      <%= text_field_tag "team[name]", @team.name, class: "form-field" %>
      <input type="submit" value="Update Team" class="form-button" style="margin: 20px 0 0 20px; width: 150px;" id="<%= 'error-button' if flash[:message] %>">
      <div style="display: inline-block; margin-left: 20px; color: red; font-size: 14pt; width: 200px; height: 52px; text-align: center; position: relative; top: 10px;">
        <%= flash[:message] %>
      </div>
    </div>
  </div>
<div class="container">
  <%= render partial: "player_cards", collection: @players, as: :player %>
</div>
<% end %>
