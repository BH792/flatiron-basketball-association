<div class="team-results-container">
  <center>
  <h1> Game Statistics:</h1>

  <div class="team-results">
    <h2>Home Team</h2>
    <h3><%= @home_team.name %></h3>
    <h2>Final Score:<%= " #{@game.total_points_by_team(@home_team.id)}" %></h2>
    <table class="game-results">
      <tr>
        <th class="player">Player</th>
        <th>Points</th>
        <th>Assists</th>
        <th>Rebounds</th>
        <th>Steals</th>
        <th>Blocks</th>
      </tr>
      <%= render partial: "player_results", collection: @home_appearances, as: :appearance %>
    </table>
  </div>

  <div class="team-results">
    <h2>Away Team</h2>
    <h3><%= @away_team.name %></h3>
    <h2>Final Score:<%= " #{@game.total_points_by_team(@away_team.id)}" %></h2>
    <table>
      <tr>
        <th class="player">Player</th>
        <th>Points</th>
        <th>Assists</th>
        <th>Rebounds</th>
        <th>Steals</th>
        <th>Blocks</th>
      </tr>
      <%= render partial: "player_results", collection: @away_appearances, as: :appearance %>
    </table>
  </div>
  </center>
</div>
