<style>
.container {
  width: 925px;
  border: solid thin black;
  margin: 0 auto;
}

.card-container {
display: inline-block;
margin: 25px 0 0 25px;
position: relative;
}

.card:hover {
box-shadow: 1px 2px 4px lightgrey;
}

input[type=checkbox] {
opacity: 0;
position: absolute;
top: 5px;
left: 5px;
}

input[type=checkbox]:checked ~ .card:first-of-type {
border-color: #9013FE;
}

input[type=checkbox]:checked ~ .card:first-of-type div.card-title-container {
color: white;
background-color: #9013FE;
}

input[type=checkbox]:checked ~ .card:first-of-type td {
border-color: #9013FE;
}

.card {
border: solid thin lightgrey;
width: 150px;
border-radius: 3px;
}

label {
z-index: 2;
position: absolute;
top: 0;
left: 0;
display: block;
width: 150px;
height: 100%;
}

.card-content {
width: 150px;
height: 100%;
text-align: center;
}

div.card-title-container:first-of-type {
background-color: lightgrey;
display: table;
height: 60px;
width: 100%;
}

div.card-title-container:first-of-type div.card-title {
display: table-cell;
vertical-align: middle;
}

td {
padding: 2px;
border-bottom: 1px solid #ddd;
}

td.last {
border-bottom: none;
}

table {
width: 100%;
border-collapse: collapse;
}
</style>


<div class="container">
  <% @users.each_with_index do |user, index| %>
    <div class="card-container">
      <input type="checkbox" class="hidden" id="<%= "player-#{index}" %>">
      <div class="card">
        <label for="<%= "player-#{index}" %>"></label>
        <div class="card-content">
          <div class="card-title-container">
            <div class="card-title"><%= user %></div>
          </div>
          <table>
            <tr>
              <td>PPG</td>
              <td>25</td>
            </tr>
            <tr>
              <td>APG</td>
              <td>6</td>
            </tr>
            <tr>
              <td>RPG</td>
              <td>6</td>
            </tr>
            <tr>
              <td>SPG</td>
              <td>2</td>
            </tr>
            <tr>
              <td class="last">BPG</td>
              <td class="last">2</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
